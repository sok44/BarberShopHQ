<script type="text/javascript">
	//$ - jQuery
	//$(function(){}); Это правильный код. То что в фигурных скобках будет выполнятся после загрузки всей страници.
	//Костыль который позволяет запускать данный код после загрузки все страницы

	$(function(){
		$('#color').simplecolorpicker();
		$('#datetimepicker').datetimepicker();
	});	

</script>

